@model Application.DTO.Usuarios.LoginDTO;
@{
    Layout = "~/Views/Shared/Acceso/_Layout.cshtml";
 
}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <!-- <h1 class="h1">MailGateway - Plataforma de Gestión de Correos</h1> -->
            <img src="~/imagen/logo.png" class="rounded" style="width: 100%;height: 20vh;object-fit: contain;" width="80" height="80" alt="" srcset="">
        </div>
        <div class="card-body">
            <h3 class="login-box-msg">Acceso al sistema</h3>

            <form asp-controller="Acceso" asp-action="Login" method="post">

                <div class="input-group mb-3">
                    <input type="email" class="form-control" asp-for="CorreoElectronico" placeholder="example@gmail.com">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="password" class="form-control" asp-for="Clave" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @*    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div> *@
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="mb-1">
                <a asp-controller="Acceso" asp-action="Registro" class="text-black fs-5 fw-lighter">
                    Registrar una nueva membresía
                </a>
            </div>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
