@model Application.DTO.Usuarios.LoginDTO;
@{
    Layout = "~/Views/Shared/Acceso/_Layout.cshtml";
 
}

@if (ViewData["message"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@ViewData["message"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="col-md-12 col-lg-8">
    <div class="card card-default p-3 p-md-5">
        <!-- menos padding en móvil -->
        <div class="card-header">
            <h3 class="card-title fs-2">Acceso al sistema</h3>


        </div>
        <div class="card-body ">
                <form asp-controller="Acceso" asp-action="Login" method="post"> 
    <div class="input-group mb-3">
        <input type="email" class="form-control" asp-for="CorreoElectronico" placeholder="example@gmail.com">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input type="password" class="form-control" asp-for="Clave" placeholder="Password">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
     @*    <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" id="remember">
                <label for="remember">
                    Remember Me
                </label>
            </div>
        </div> *@
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>

        </div>
        <div class="card-footer">
            <a asp-controller="Acceso" asp-action="Registro" class="text-black fs-5 fw-lighter">
                "Registrar una nueva membresía
            </a>
        </div>
    </div>
</div>


