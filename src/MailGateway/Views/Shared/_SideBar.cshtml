@using System.Security.Claims;

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-action="Index" asp-controller="Home" class="brand-link">
        <img src="~/Imagen/banner.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">MailGateway</span>
    </a>


    <!-- Sidebar -->
    <div class="sidebar">

        @if (User.Identity!.IsAuthenticated!)
        {
            
            <!-- Sidebar user panel (optional) -->
            <div  class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/Imagen/Perfil/@User.Claims.Where(claim => claim.Type == ClaimTypes.Locality).Select(claim => claim.Value).SingleOrDefault()" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a asp-action="Perfil" asp-controller="Perfil" class="d-block">@User.Claims.Where(claim => claim.Type == ClaimTypes.Name).Select(claim => claim.Value).SingleOrDefault()</a>
                </div>
            </div>
            
        }
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Home" class="nav-link">
                        <i class="fas fa-inbox"></i>
                        <p>
                            Recibidos
                            <span class="right badge badge-danger">0</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Enviados" class="nav-link">
                        <i class="far fa-envelope"></i>
                        <p>
                            Enviados
                            <span class="right badge badge-warning">0</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Logout" asp-controller="Acceso" class="nav-link">
                        <i class="nav-icon fas fa-table"></i>
                       Cerrar Sesion
                    </a>
                    
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>